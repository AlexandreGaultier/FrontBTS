{% extends 'base.html.twig' %}

{% block title %}&#9992; Billet{% endblock %}

{% block body %}
<center>
    <div class="row" style=" width : 60%; Height: 325px; background : white; margin-top : 50px; border : solid 1px black; border-radius : 4px; z-index : 5;">
        <div style="background-color : #913535; text-align : center; width : 100%; padding : 10px; color : white;">
            <h4>Billet</h4>
        </div>
        {# {{ dump(billet)}} #}
        <div style="float : left; text-align : center; margin: 10px;">
                <h5><i class="material-icons prefix">flight_takeoff</i> - {{billet.idVol.AeroportDepart.nom}}</h5></br>
                <h6 style="margin-top : -20px;">{{billet.idVol.AeroportDepart.pays}}</h6></br>
                <h5 style="margin-top : -15px;">{{billet.idVol.dateDepart|date('Y-m-d-H:i')}}</h5>
            </div>

        <div style="float : right; text-align : center; margin: 10px;">
                <h5><i class="material-icons prefix">flight_takeoff</i> - {{billet.idVol.AeroportArrivee.nom}}</h5></br>
                <h6 style="margin-top : -20px;">{{billet.idVol.AeroportArrivee.pays}}</h6></br>
                <h5 style="margin-top : -15px;">{{billet.idVol.dateArrivee|date('Y-m-d-H:i')}}</h5>
            </div>
        <div class="row" style="width: 20%;">
        {% if app.user.getSexe == "Femme" %}<h5>Mme.{% else %} Mr.{% endif %}{{app.user.nom}} {{app.user.prenom}}</h5>
            <h5>Avion : {{billet.idVol.idAvion.nom}}</h5>
        </div>
        <h6>Choisissez votre classe pour acheter ce billet</h6>
    </div>
    <div>

        <button class="waves-effect waves-light btn" style="width : 14%; Height : 50px; margin-top : -55px; margin-right : 50px; border : solid 1px #475781; border-radius : 5px; background : #283148; z-index : 8888115; color : white;">
            Billet Eco <b>{{billet.idVol.prixEco}}</b> <i class="material-icons prefix">euro_symbol</i>
        </button>
        <button class="waves-effect waves-light btn" style="width : 14%; Height : 50px; margin-top : -55px; border : solid 1px #475781; border-radius : 5px; background : #283148; z-index : 8888115; color : white;">
            Billet Premium <b>{{billet.idVol.prixPremium}}</b> <i class="material-icons prefix">euro_symbol</i>
        </button>
        <button class="waves-effect waves-light btn" style="width : 14%; Height : 50px; margin-top : -55px; margin-left : 50px; border : solid 1px #475781; border-radius : 5px; background : #283148; z-index : 8888115; color : white;">
            Billet Business <b>{{billet.idVol.prixBusiness}}</b> <i class="material-icons prefix">euro_symbol</i>
        </button>
    </div>
</center>

{% endblock %}